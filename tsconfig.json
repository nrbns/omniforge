{
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["ES2022"],
    "module": "commonjs",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "allowJs": true,
    "checkJs": false,
    "outDir": "./dist",
    "rootDir": ".",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "composite": true,
    "incremental": true,
    "baseUrl": ".",
    "paths": {
      "@omniforge/shared": ["./packages/shared/src"],
      "@omniforge/ui": ["./packages/ui/src"],
      "@omniforge/redix": ["./packages/redix/src"],
      "@omniforge/agents": ["./packages/agents/src"]
    }
  },
  "exclude": ["node_modules", "dist", ".next", "build"]
}

