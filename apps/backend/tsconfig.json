{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "ES2022",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "skipLibCheck": true,
    "strictNullChecks": true,
    "noImplicitAny": true,
    "strictBindCallApply": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "paths": {
      "@omniforge/shared": ["../../packages/shared/src"],
      "@omniforge/ui": ["../../packages/ui/src"],
      "@omniforge/redix": ["../../packages/redix/src"],
      "@omniforge/agents": ["../../packages/agents/src"],
      "@omniforge/rag": ["../../packages/rag/src"],
      "@omniforge/llm": ["../../packages/llm/src"],
      "@omniforge/knowledge-base": ["../../packages/knowledge-base/src"],
      "@omniforge/document-processor": ["../../packages/document-processor/src"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist", "test"]
}

