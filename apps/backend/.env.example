# OmniForge Backend - Environment Variables
# Copy to .env and fill in values

# Required
DATABASE_URL="postgresql://user:password@localhost:5432/omniforge?schema=public"

# Server
NODE_ENV=development
PORT=3001

# Demo mode (no API keys required - uses mock AI)
DEMO_MODE=false

# AI (required when DEMO_MODE=false)
HUGGINGFACE_API_KEY=
OPENAI_API_KEY=

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# Neo4j (optional - for knowledge graph)
NEO4J_URI=bolt://localhost:7687
NEO4J_USER=neo4j
NEO4J_PASSWORD=omniforge_dev

# Auth (optional - for Clerk)
CLERK_SECRET_KEY=
CLERK_PUBLISHABLE_KEY=

# CORS
FRONTEND_URL=http://localhost:3000
ALLOWED_ORIGINS=

# Vercel (for deploy/quick endpoint)
VERCEL_TOKEN=
VERCEL_TEAM_ID=

# Design import (optional)
FIGMA_ACCESS_TOKEN=

# Optional
JWT_SECRET=
SENTRY_DSN=
